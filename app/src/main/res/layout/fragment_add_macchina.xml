<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentAddMacchina">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textViewCliente_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente" />

        <Spinner
            android:id="@+id/spinnerIdCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewNumeroTelaio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero Telaio" />

        <EditText
            android:id="@+id/editTextNumTelaio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewMarca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marca" />

        <EditText
            android:id="@+id/editTextMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/textViewModello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modello" />

        <EditText
            android:id="@+id/editTextModello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewTarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Targa" />

        <EditText
            android:id="@+id/editTextTarga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aggiungi macchina" />

    </LinearLayout>

</FrameLayout>